{
  "name": "@notifica/node",
  "version": "0.1.0",
  "description": "SDK oficial do Notifica para Node.js — infraestrutura de notificações para o Brasil",
  "author": "Notifica <dev@usenotifica.com.br>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "typecheck": "tsc --noEmit",
    "test": "node --test test/**/*.test.ts",
    "test:ts": "tsc --noEmit && node --experimental-strip-types --test test/**/*.test.ts",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.19.31",
    "tsup": "^8.0.0",
    "typescript": "~5.7.0"
  },
  "keywords": [
    "notifica",
    "notifications",
    "whatsapp",
    "sms",
    "email",
    "push",
    "brazil",
    "brasil",
    "sdk"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/usenotifica/notifica-node"
  },
  "homepage": "https://usenotifica.com.br",
  "bugs": {
    "url": "https://github.com/usenotifica/notifica-node/issues"
  }
}
